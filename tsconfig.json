{
    "compilerOptions": {
      "target": "es5", 
      "module": "commonjs", 
      "lib": ["dom", "dom.iterable", "esnext"], 
      "allowJs": true, 
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true, 
      "strict": true, 
      "forceConsistentCasingInFileNames": true, 
      "noFallthroughCasesInSwitch": true,
      "sourceMap": true, 
      "outDir": "dist", 
      "rootDir": "src", 
      "baseUrl": ".", 
      "declaration": false,
      "newLine": "LF",

    },
    "include": ["src"], 
    "exclude": ["node_modules"] 
  }
  